<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:Regis.Controls">

    
    <Style TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="ComicSans"/>
    </Style>

    
                    
    <Style TargetType="{x:Type ctrls:PluginContainer}">
    	<Setter Property="Template">
    		<Setter.Value>
    			<ControlTemplate TargetType="{x:Type ctrls:PluginContainer}">
    				<Border Background="{TemplateBinding Background}"
    					BorderBrush="{TemplateBinding BorderBrush}"
    					BorderThickness="{TemplateBinding BorderThickness}">
                        
    					<ContentPresenter x:Name="PART_ContentContainer" />
                        
    				</Border>
    			</ControlTemplate>
    		</Setter.Value>
    	</Setter>
    </Style>
</ResourceDictionary>
